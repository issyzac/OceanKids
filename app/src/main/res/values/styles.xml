<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNursery" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/light_blue_600</item>
    </style>

    <style name="AppThemePrimary" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue_a400</item>
        <item name="colorPrimaryDark">@color/light_blue_800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemePreSchool" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_600</item>
        <item name="colorPrimaryDark">@color/yellow_800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogueTheme" parent="Theme.AppCompat.Dialog.Alert">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>
