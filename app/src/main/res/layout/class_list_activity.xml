<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/card_separator"
    tools:context="apps.issy.com.oceankids.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/border_three"
                    android:id="@+id/names_filter"
                    android:textColor="@color/white"
                    android:inputType="textCapWords"
                    android:hint="Search Name"
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint="@color/white"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp"
                    android:background="@drawable/border_three"
                    android:textSize="16sp"
                    android:id="@+id/card_number_filter"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:layout_toRightOf="@id/names_filter"
                    android:layout_marginLeft="32dp"
                    android:hint="Search Number"
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint="@color/white"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/title_container">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/kids_names"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="NAMES"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/opensans_bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/kids_class_title"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="CLASS"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_toRightOf="@id/kids_names"
                    android:fontFamily="@font/opensans_bold"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/kids_number_title"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="CHECK IN/OUT"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_bold"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/kids_list"
                android:layout_below="@id/title_container" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addchild_button"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                app:backgroundTint="@color/green_500"
                app:fabSize="auto"
                app:srcCompat="@mipmap/ic_person_add" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>