<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="apps.issy.com.oceankids.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/logo"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/logo"
                    android:layout_marginLeft="16dp"
                    android:text="Ocean Kids"
                    android:id="@+id/app_title"
                    android:fontFamily="@font/google_sans_bold"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:visibility="gone"
            android:id="@+id/viewpagertab"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="16dp"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorWithoutPadding="false"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorGravity="top"
            app:stl_indicatorColor="@color/black"
            app:stl_indicatorThickness="1dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorCornerRadius="2dp"
            app:stl_overlineColor="#4D000000"
            app:stl_overlineThickness="0dp"
            app:stl_underlineColor="#4D000000"
            app:stl_underlineThickness="1dp"
            app:stl_dividerColor="@color/white"
            app:stl_dividerThickness="0.2dp"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextColor="@color/white"
            app:stl_defaultTabTextSize="12sp"
            app:stl_defaultTabTextHorizontalPadding="16dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_distributeEvenly="false"
            app:stl_clickable="true"
            app:stl_titleOffset="24dp"
            app:stl_drawDecorationAfterTab="false"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/purple_050">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Items"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_light"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_margin="2dp"
                        android:id="@+id/check_in_card"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/checkin_card"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_item">

                            <TextView
                                android:id="@+id/checkin_title"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:text="@string/checkinout"
                                android:textColor="@color/card_title_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_margin="2dp"
                        android:id="@+id/register_card"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_item">

                            <TextView
                                android:id="@+id/register_title"
                                android:layout_width="150dp"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/avenir_light"
                                android:text="Register"
                                android:textStyle="bold"
                                android:textColor="@color/card_title_text"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/card_separator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Sunday Summaries"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_light"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:background="@drawable/et_background">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/card_title_text"
                        android:textStyle="bold"
                        android:text="Second Service"
                        android:textSize="18sp"
                        android:id="@+id/second_service_title"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/separator_one"
                        android:background="@color/card_light_text"
                        android:layout_below="@id/second_service_title"
                        android:layout_marginTop="16dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_one"
                        android:textSize="16sp"
                        android:id="@+id/checked_in_title"
                        android:textColor="@color/green_600"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Total Checked In"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_one"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/total_checked_in_2_home"
                        android:layout_toRightOf="@id/checked_in_title"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/checked_in_title"
                        android:textSize="16sp"
                        android:id="@+id/checked_out_title"
                        android:textColor="@color/green_600"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Total Checked Out"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/checked_in_title"
                        android:textSize="16sp"
                        android:id="@+id/total_checked_out_2_home"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/checked_out_title"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="0"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/card_light_text"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/card_title_text"
                        android:textStyle="bold"
                        android:text="Third Service"
                        android:textSize="18sp"
                        android:id="@+id/third_service_title"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/separator_two"
                        android:background="@color/card_light_text"
                        android:layout_below="@id/third_service_title"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_two"
                        android:textSize="16sp"
                        android:id="@+id/second_checked_in_title"
                        android:textColor="@color/green_600"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Total Checked In"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_two"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/total_checked_in_3_home"
                        android:layout_toRightOf="@id/second_checked_in_title"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/second_checked_in_title"
                        android:textSize="16sp"
                        android:id="@+id/second_checked_out_title"
                        android:textColor="@color/green_600"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Total Checked Out"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/second_checked_in_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/total_checked_out_3_home"
                        android:layout_toRightOf="@id/second_checked_out_title"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/avenir_light"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="0"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="@color/card_separator"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/light_blue_050">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Classes"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/avenir_light"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp">


                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_margin="2dp"
                        android:id="@+id/nursery_card"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/nursery_kids_class_card"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_item">

                            <TextView
                                android:id="@+id/nursery_class_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/rosario_regular"
                                android:gravity="center"
                                android:text="Nursery"
                                android:textColor="@color/yellow_700"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_margin="2dp"
                        android:id="@+id/preschool_card"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/pre_school_kids_class_card"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_item">

                            <TextView
                                android:id="@+id/pre_school_class_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/rosario_regular"
                                android:gravity="center"
                                android:text="Pre-School"
                                android:textColor="@color/purple_700"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_margin="2dp"
                        android:id="@+id/primary_card"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/primary_kids_class_card"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_item">

                            <TextView
                                android:id="@+id/primary_class_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/rosario_regular"
                                android:gravity="center"
                                android:text="Primary"
                                android:textColor="@color/light_blue_700"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>
