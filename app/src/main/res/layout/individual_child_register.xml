<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/individual_child_backround">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/child_number"
        android:fontFamily="@font/avenir_light"
        android:textSize="16sp"
        android:text="Child 1"
        android:textColor="@color/card_title_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/first_name"
            android:layout_marginRight="8dp"
            android:paddingLeft="10dp"
            android:hint="First Name"
            android:textSize="16sp"
            android:textColor="@color/card_grid_text"
            android:textColorHint="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:inputType="textCapSentences"
            android:drawableLeft="@mipmap/ic_input"
            android:drawablePadding="8dp"
            android:background="@drawable/et_background" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/last_name"
            android:paddingLeft="10dp"
            android:hint="Last Name"
            android:textSize="16sp"
            android:textColor="@color/card_grid_text"
            android:textColorHint="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:inputType="textCapSentences"
            android:drawableLeft="@mipmap/ic_input"
            android:drawablePadding="8dp"
            android:background="@drawable/et_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/date_of_birth"
            android:paddingLeft="10dp"
            android:hint="Date Of Birth"
            android:textSize="16sp"
            android:textColor="@color/card_grid_text"
            android:textColorHint="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:inputType="textEmailAddress"
            android:drawableLeft="@mipmap/ic_cal"
            android:drawableTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:background="@drawable/et_background" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Gender"
                android:layout_marginLeft="8dp"
                android:textColorHint="@color/colorPrimary"/>

            <com.github.angads25.toggle.LabeledSwitch
                android:id="@+id/gender"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:textSize="18sp"
                app:colorBorder="@color/teal_300"
                app:colorDisabled="@color/teal_300"
                app:colorOff="@color/white"
                app:colorOn="@color/teal_300"
                app:textOn="M"
                app:textOff="F"
                app:on="false" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/nationality"
            android:paddingLeft="10dp"
            android:hint="Nationality"
            android:textSize="16sp"
            android:textColor="@color/card_grid_text"
            android:textColorHint="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:inputType="textCapSentences"
            android:drawableLeft="@mipmap/ic_country"
            android:drawablePadding="8dp"
            android:background="@drawable/et_background" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/allergies"
        android:hint="Allergies"
        android:minLines="4"
        android:minHeight="100dp"
        android:gravity="start"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="@color/card_grid_text"
        android:textColorHint="@color/card_grid_text"
        android:fontFamily="@font/avenir_light"
        android:inputType="textMultiLine|textCapSentences"
        android:background="@drawable/et_background" />

</LinearLayout>